<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Definition for textEditor bean -->
	<!-- 这里的ref是引用另一个bean，同时传递的也可以是value，但必须给定具体值 -->
	<!-- ref 和 value 的区别简单理解就是对等号后面的值直接传过去，还是去匹配寻找
		的id的bean -->
	<!-- 这是构造依赖注入 -->
	<!-- <bean id="textEditor" class="com.tutorialspoint.TextEditor"> <constructor-arg 
		ref="spellChecker" /> </bean> -->

	<!-- Definition for textEditor bean,这是完整写法 -->
	<!-- <bean id="textEditor" class="com.tutorialspoint.TextEditor"> <property 
		name="spellChecker" ref="spellChecker"></property> </bean> -->

	<!-- 这是简写，但是需要导入命名空间(就是第5行) -->
	<bean id="textEditor" class="com.tutorialspoint.TextEditor"
		p:spellChecker-ref="spellChecker" />


	<!-- Definition for spellChecker bean -->

	<bean id="spellChecker" class="com.tutorialspoint.SpellChecker"></bean>

</beans>
